    <h3>Sign Up</h3>
    <div class="error">
      <% if flash[:signin_error] %>
        <% flash[:signin_error].each do |msg| %>
        <%= msg %>
        <%end%>
      <%end%>
    </div>
    <%= form_for @user, :html => {:class => "pure-form"} do |f| %>
      <p><%= f.text_field :name, placeholder: "Name" %><br>
      <%= f.text_field :email, placeholder: "Email" %><br>
      <%= f.password_field :password, placeholder: "Password" %><br>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %></p>
      <%= f.submit "Sign Up", :id => "btn-sign-up", class: 'pure-button' %>

    <% end  %>
