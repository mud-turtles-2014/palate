<h3>Log In</h3>
<div class="error">
  <%=flash[:error]%>
</div>
  <p><%=flash[:login_message]%></p>
<%= form_for :session, url: login_path, :html => {:class => "pure-form"} do |f| %>
  <p><%= f.text_field :name, placeholder: 'Name' %><br>
  <%= f.password_field :password, placeholder: "Password" %></p>
  <%= f.submit "Log In", :id => "btn-log-in", class: 'pure-button' %>
<% end %>
