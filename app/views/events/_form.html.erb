<%= form_for @event do |f|%>

  <%= text_area_tag :emails, "", {:placeholder => "Invite guests by entering emails separated by commas!"} %>

  <fieldset>
    <%= f.text_field :name, placeholder: "Event Name" %>
    <%= f.date_field :date %>
    <%= f.time_field :time %>
    <%= f.text_field :location, placeholder: "Event Location" %>
    <%= f.submit 'Save', class: 'button' %>
  </fieldset>
<% end %>
